<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.css" rel="stylesheet" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Food List</title>
</head>
<body class="bg-[#111827]">
  <section class="p-10">
    <form action="/foods" method="POST" class="mb-8 p-5 bg-gray-800 rounded text-white">
      <h2 class="text-lg font-bold mb-4">Add New Food</h2>
      <input type="text" name="name" placeholder="Name" required class="block mb-2 p-2 rounded">
      <input type="number" name="price" placeholder="Price" required class="block mb-2 p-2 rounded">
      <input type="text" name="img" placeholder="Image URL" required class="block mb-2 p-2 rounded">
      <input type="text" name="address" placeholder="Address" required class="block mb-2 p-2 rounded">
      <input type="text" name="category_id" placeholder="Category ID" required class="block mb-2 p-2 rounded">
      <button type="submit" class="px-4 py-2 bg-blue-700 rounded">Add Food</button>
    </form>
    <div class="grid grid-cols-4 gap-6">
      <% dataFood.forEach(item => { %>
        <div class="bg-gray-800 text-white rounded-lg shadow p-5">
          <img src="<%= item.img %>" alt="<%= item.name %>" class="mb-4 rounded">
          <h3 class="text-xl font-bold mb-2"><%= item.name %></h3>
          <p>Address: <%= item.address %></p>
          <p>Price: $<%= item.price %></p>
          <form action="/foods/<%= item._id %>" method="POST" class="mt-4">
            <button type="submit" formaction="/foods/<%= item._id %>/edit" class="bg-yellow-500 px-4 py-2 rounded mr-2">Edit</button>
            <button type="submit" class="bg-red-500 px-4 py-2 rounded" formaction="/foods/<%= item._id %>?_method=DELETE">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"></script>
</html>
